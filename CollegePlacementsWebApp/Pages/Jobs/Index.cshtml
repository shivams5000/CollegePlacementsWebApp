@page
@model CollegePlacementsWebApp.Jobs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">View All Jobs</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job[0].Package)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Job) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Package)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyID)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.JobID">Edit</a> |
                <a asp-page="./Details" class="btn btn-warning" asp-route-id="@item.JobID">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.JobID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
