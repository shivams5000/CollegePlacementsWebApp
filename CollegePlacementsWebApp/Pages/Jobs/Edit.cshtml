@page
@model CollegePlacementsWebApp.Jobs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Job Details</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.JobID" />
            <div class="form-group">
                <label asp-for="Job.JobTitle" class="control-label"></label>
                <input asp-for="Job.JobTitle" class="form-control" />
                <span asp-validation-for="Job.JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Package" class="control-label"></label>
                <input asp-for="Job.Package" class="form-control" />
                <span asp-validation-for="Job.Package" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.CompanyID" class="control-label"></label>
                <select asp-for="Job.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
                <span asp-validation-for="Job.CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Job Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
